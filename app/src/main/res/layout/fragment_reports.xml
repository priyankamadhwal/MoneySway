<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/report_range_daily"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@color/colorPrimaryLight"
            android:gravity="center"
            android:text="@string/report_range_daily"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/report_range_monthly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@color/colorDivider"
            android:gravity="center"
            android:text="@string/report_range_monthly"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/report_range_yearly"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@color/colorPrimaryLight"
            android:gravity="center"
            android:text="@string/report_range_yearly"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/report_range_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@color/colorPrimaryLight"
            android:gravity="center"
            android:text="@string/report_range_total"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/report_range_custom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:background="@color/colorPrimaryLight"
            android:gravity="center"
            android:text="@string/report_range_custom"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorSecondaryText"
            android:layout_marginRight="1dp"
            android:padding="16dp">
            <TextView
                android:id="@+id/income_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:text="@string/income_string"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondaryText"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:text="@string/total_income"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorSecondaryText"
            android:layout_marginRight="1dp"
            android:padding="16dp">
            <TextView
                android:id="@+id/expense_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:text="@string/expense_string"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondaryText"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:text="@string/total_expense"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorSecondaryText"
            android:padding="16dp">
            <TextView
                android:id="@+id/balance_string"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorText"
                android:text="@string/balance_string"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondaryText"
                android:textColor="@color/colorText"
                android:gravity="center"
                android:text="@string/total_balance"
                android:textSize="26sp" />
        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/incomeColor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/income" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:text="@string/expense_string"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/expenseColor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/expense" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:text="@string/income_string"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/balanceColor"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/balance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/balance_string"
                android:textSize="14sp" />
        </LinearLayout>

        <lecho.lib.hellocharts.view.LineChartView
            android:id="@+id/income_expense_balance_chart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/income_categories_string"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/income1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="income1"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/income2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="income2"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/income3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="income3"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/income4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="income4"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="@string/expense_categories_string"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/expense1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="expense1"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/expense2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="expense2"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/expense3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="expense3"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:srcCompat="@color/expense4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="6dp"
                android:text="expense4"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/income_expense_balance_chart">

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/income_pie_chart"
                android:layout_width="200dp"
                android:layout_height="230dp" />

            <lecho.lib.hellocharts.view.PieChartView
                android:id="@+id/expense_pie_chart"
                android:layout_width="200dp"
                android:layout_height="230dp" />
        </LinearLayout>

        <lecho.lib.hellocharts.view.ColumnChartView
            android:id="@+id/income_expense_category_wise_chart"
            android:layout_margin="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="650dp" >
        </lecho.lib.hellocharts.view.ColumnChartView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="7"
            android:background="#dcdcdc"
            android:padding="20dip"
            android:text="Statistics"
            android:layout_marginTop="40dp"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryDark" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:shrinkColumns="*"  android:stretchColumns="*" android:background="#ffffff">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Mean daily income"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="@string/amount_default"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Mean daily expense"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="@string/amount_default"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Highest income"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Transaction"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Highest expense"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Transaction"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Lowest income"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Transaction"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Lowest expense"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Transaction"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Constant spending"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Result"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Variable spending"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="Result"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>

            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="#dcdcdc"
                    android:padding="20dip"
                    android:text="Recommended daily spend"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:text="@string/amount_default"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="#cac9c9"
                    android:textColor="#000000"
                    android:padding="20dip"
                    android:textSize="16sp"
                    android:gravity="center"/>
